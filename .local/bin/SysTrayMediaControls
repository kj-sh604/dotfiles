#!/bin/sh

BIN_PATH=~/.local/share/python-SysTrayMediaControls/SysTrayMediaControls
SCRIPT_PATH=~/.local/share/python-SysTrayMediaControls/SysTrayMediaControls.py

if [ -f "$BIN_PATH" ]; then
    $BIN_PATH
elif [ -f "$SCRIPT_PATH" ]; then
    python3 $SCRIPT_PATH
else
    echo "SysTrayMediaControls/SysTrayMediaControls.py not found"
    notify-send "Error!" "SysTrayMediaControls/SysTrayMediaControls.py not found" --urgency critical
fi
